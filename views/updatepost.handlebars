<h1>Your Dashboard</h1>
<div class="card bg-success">
<br>
<h2 class='text-center m-2'>Edit Post</h2>

<form class='m-3 p-2'>
    <div class="input-group input-group-lg">
    <span class="input-group-text" id="inputGroup-sizing-lg">Title</span>
    <input type="text" class="form-control" id='title' value='{{currentPost.name}}' aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
    </div>
    <br>
    <div class="input-group input-group-lg">
    <span class="input-group-text">Content</span>
    <textarea class="form-control" id='content' placeholder='{{currentPost.content}}' type="text" aria-label="With textarea"></textarea>
    </div>
    <br>
    <div class="d-grid gap-2 col-6 mx-auto m-3">
    <button class="btn btn-warning" id='updatepost-btn' type="button" value='{{currentPost.id}}'>Update Post</button>
    <button class="btn btn-warning" id='deletepost-btn' type="button" value='{{currentPost.id}}'>Delete</button>
    </div>
</form>
</div>

<script src="/js/updatePost.js"></script>