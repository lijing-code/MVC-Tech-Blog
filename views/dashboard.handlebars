{{!-- display all the user's posts on the dashboard --}}
<h1>Your Dashboard</h1>
<br>
{{#if posts.length}}
    {{#each posts as |post|}}
        <div class='card bg-success p-3'>
            <a class="post-title m-3 p-2 h2 text-white" href="/updatepost/{{post.id}}">{{{post.name}}}</a>
            <p>{{{post.description}}}</p>
            <span class='position-absolute bottom-0 end-0 m-1 text-white'>{{{format_date post.date_created}}}</span>
            <br>     
        </div> 
        <br>   
    {{/each}}
{{/if}}

{{!-- Add new post button --}}
    <div class ="d-grid gap-2 col-6 mx-auto">
        <a href='/newpost'><button type="button" class="btn btn-secondary">+ New Post</button></a>
    </div>


