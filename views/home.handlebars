{{!-- display each post generated by different user --}}
{{#each posts as |post|}}
<div class="card bg-sucess">
    {{!-- The title of the post and the created date --}}
    <figure class="text-center m-2">
        {{!-- The title --}}
        <blockquote class="blockquote">
            <h3>
                <a class='all-comments' href="/comment/{{post.id}}">{{{post.name}}}</a>
            </h3>
        </blockquote>
        {{!-- the created user and date --}}
        <figcaption class="blockquote-footer">
        <p>
        Posted by {{{post.user.name}}} on {{{format_date post.date_created}}}
        </p>
        </figcaption>

    </figure>
    {{!-- the description of the post --}}
    <div class="card-body">
        <p>{{{post.description}}}</p>
    </div>

</div>
{{/each}}

